$ret_linkexist = $db->query($sql_linkexist);
if ($db->num_rows($ret_linkexist))
{
	while ($row_linkexist = $db->fetch_array($ret_linkexist))
	{
		$ext_arr[] = $row_linkexist['customer_id'];
	}
}
//Define constants for this page
$table_name='customers';
$page_type='Customers';
