//#Search terms
$search_fields = array('customername','customeremail');

$query_string = "request=gift_voucher&fpurpose=add_custlink&prod_dontsave=1&pass_giftid=".$_REQUEST['pass_giftid'];
foreach($search_fields as $v) {
	$query_string .= "&$v=${$v}";//#For passing searh terms to javascript for passing to different pages.
}
	
//#Sort
$sort_by_link = (!$_REQUEST['sort_by_link'])?'customer_fname':$_REQUEST['sort_by_link'];
$sort_order_link = (!$_REQUEST['sort_order_link'])?'ASC':$_REQUEST['sort_order_link'];
